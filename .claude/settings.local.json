{
  "permissions": {
    "allow": [
      "Bash(test:*)",
      "Bash(python -c:*)",
      "Bash(python:*)",
      "Bash(git commit:*)",
      "Bash(git add:*)",
      "Bash(tree:*)",
      "WebSearch",
      "Bash(chmod:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(claude mcp list:*)",
      "Bash(pip show:*)",
      "Bash(echo $ANTHROPIC_API_KEY)",
      "Bash(pip install:*)",
      "mcp__plugin_Notion_notion__notion-fetch",
      "mcp__plugin_Notion_notion__notion-update-page"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Read and follow the custom instructions in .claude/custom-instructions.md for this session. You are ATLAS (Agent Testing & Laboratory Assistant)."
          }
        ]
      }
    ]
  }
}
